---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
    button {
        padding: 1rem;
        border-radius: 17px;
    }

    .primary {
        background-color: royalblue;
        color: white;
    }

    .secondary {
        background-color: yellowgreen;
        color: blueviolet;
    }
    .small { 
        font-size: 1rem;
    }
    .medium {
        font-size: 4rem;
    }
    .large {
        font-size: 6rem;
    }
</style>